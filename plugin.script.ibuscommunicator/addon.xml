<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="plugin.script.ibuscommunicator" name="IBusCommunicator" version="0.1.40" provider-name="harryberlin">
  <!--
    Add-on definitions.
    reference: http://kodi.wiki/view/Add-on_settings (root http://kodi.wiki/view/Add-on_development)

    This plugin is both a service (automatic start up) -and a script (callable)
	
	Service starts on XBMC/KODI startup. Service plugin can be found through:
	"Settings -> Addons -> enabled add-ons > services -> Raspberry Pi BMW Infotainment"

	Script usually appears as "launch" button under settings (in our case it's called internally). 
	"Settings -> Addons -> enabled add-ons -> ... -> Raspberry Pi BMW Infotainment.
	
	Repository for automatic updates. Ref: http://kodi.wiki/view/HOW-TO:Create_a_repository_for_add-ons
-->
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point="xbmc.python.script" library="default.py" />
  <extension point="xbmc.service" start="login" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <platform>linux</platform>
    <summary lang="en">IBus Communication for BMW</summary>
    <description lang="en">Addon for controlling Raspberry Pi with original BMW (E46, E39, ...) with Professional Navigation System. Radio BM24, BM54 and 16:9 Bordscreen.</description>
    <forum>http://www.bmwraspcontrol.de/board/showthread.php?tid=295</forum>
    <email>christian383@arcor.de</email>
    <source>not released at the moment</source>
  </extension>
</addon>